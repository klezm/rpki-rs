// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
	"name": "Rust",
	"build": {
		"dockerfile": "Dockerfile"
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"yzhang.markdown-all-in-one",
				"GitHub.copilot",
				"GitHub.copilot-labs",
				"eamodio.gitlens",
				"redhat.vscode-xml",
				"ms-vscode.live-server"
			],
			"settings": {
				"[rust]": {
					"editor.defaultFormatter": "rust-lang.rust-analyzer"
				},
				// https://rust-analyzer.github.io/manual.html
				"rust-analyzer.cargo.extraEnv": {"RUSTUP_TOOLCHAIN": "stable"},
				// "rust-analyzer.cargo.target": null,
				// "rust-analyzer.cargo.buildScripts.invocationLocation": "workspace",
				// "rust-analyzer.cargo.features": "all",
				"rust-analyzer.linkedProjects": [
					"Cargo.toml",
					"fuzz/Cargo.toml"
				],
				"rust-analyzer.files.excludeDirs": [
					"corpus",
					"test-data",
					"target",
					"fuzz/target"
				]
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
			"installZsh": true,
			"username": "vscode",
            "uid": "1000",
            "gid": "1000",
            "upgradePackages": true
		}
		// "ghcr.io/devcontainers/features/sshd:1": {} // Prerequisite for using Codespaces in JetBrains IDEs
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": ""

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
